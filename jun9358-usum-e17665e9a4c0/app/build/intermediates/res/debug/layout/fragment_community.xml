<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7EDE9"
    tools:context="com.songjin.usum.controllers.fragments.CommunityFragment">

    <com.songjin.usum.controllers.views.SchoolRankingRecyclerView
        android:id="@+id/school_rankings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/my_school_ranking_card_container" />

    <LinearLayout
        android:id="@+id/my_school_ranking_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ACD0C9"
        android:padding="4dp">

        <com.songjin.usum.controllers.views.SchoolRankingCardView
            android:id="@+id/my_school_ranking_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout><!-- From: file:/Users/IronFactory/AndroidStudioProjects/jun9358-usum-e17665e9a4c0/app/src/main/res/layout/fragment_community.xml -->